              %br
              %br
              %br
              %br
              Electro -
              %br
              &nbsp;&nbsp;&nbsp;lytes
            %td{:style => "width:20px"}
              %table
                %thead
                  %th
                  %th{:style => "width:20px"}
                %tbody
                %tr
                  %td
                    Sodium
                  %td
                    = inv.electrolyte.sodium
                %tr
                  %td
                    Calcium
                  %td
                    = inv.electrolyte.calcium
                %tr
                  %td
                    Potassium
                  %td
                    = inv.electrolyte.potassium
