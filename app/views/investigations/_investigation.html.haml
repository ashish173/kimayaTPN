.container_12
  .gr_6
    .gr_12
      .mmodule
        %h2
          %span Arterial Blood Gas Analysis
        .mmodule-body
          = f.fields_for :blood_analysis do |b|
            .input
              .input_left
                %p{:style => "margin-bottom:15px;" }
                  %span{:style => "width:100px;"} pH
                  = b.text_field :ph, :size => 6, :class => "input_box"
                %p{:style => "margin-bottom:15px;" }
                  PCO2
                  = b.text_field :pco2, :size => 6, :class => "input_box"
                %p{:style => "margin-bottom:15px;" }
                  PaO2
                  = b.text_field :pao2, :size => 6, :class => "input_box"
              .input_right
                %p{:style => "margin-bottom:15px;" }
                  HCO3
                  = b.text_field :hco3, :size => 6, :class => "input_box"
                %p{:style => "margin-bottom:15px;" }
                  ABE
                  = b.text_field :abe, :size => 6, :class => "input_box"
                %p{:style => "margin-bottom:15px;" }
                  SO2
                  = b.text_field :so2, :size => 6, :class => "input_box"
    .gr_12
      .mmodule   
        %h2
          %span Diagnosis
        .mmodule-body{:style => "height:240px"}
          = f.fields_for :diagnosis do |d|
            .input0
              .input1
                Hypoglycaemia: 
              .input2
                = d.radio_button :hypoglycemia, false, :class => 'hyperglycemia'
                = "No"
              .input2
                = d.radio_button :hypoglycemia, true, :class => 'hyperglycemia'
                = "Yes"
              .input4
                Episodes:
                = d.text_field :hypoglycemia_episode, :size => 3, :class => "input_box"
            .input0
              .input1
                Hyperglycemia:
              .input2
                = d.radio_button :hyperglycemia, false,  :class => 'hyperglycemia'
                = "No"
              .input2
                = d.radio_button :hyperglycemia, true, :class => 'hyperglycemia'
                = "Yes"
              .input4
                Episodes:
                = d.text_field :hyperglycemia_episode, :size => 3, :class => "input_box"
            .input0
              .input1
                Sepsis: 
              .input2
                = d.text_field :sepsis, :class => "input_box"
              .input0
                .input1
                  Exhange 
                .input2
                  = d.radio_button :exhange, false, :class => 'exhange'
                  = "No"
                .input2
                  = d.radio_button :exhange, true, :class => 'exhange'
                  = "Yes"
                .input4
              .input0
                .input1
                  Thrombocytopenia
                .input2
                  = d.radio_button :thrombocytopenia, false, :class => 'thrombocytopenia'
                  = "No"  
                .input2
                  = d.radio_button :thrombocytopenia, true, :class => 'thrombocytopenia'
                  = "Yes"
                .input4
                  DOL:
                  = d.text_field :dol, :size => 3, :class => "input_box"
              .input0
                .input1
                  Intra Ventricular Haemorrhage
                .input2
                  = d.radio_button :haemorrhage, false, :class => 'haemorrhage'
                  = "No"
                .input2
                  = d.radio_button :haemorrhage, true, :class => 'haemorrhage'
                  = "Yes"
                .input4
                  Grade:
                  = d.text_field :grade, :size => 3, :class => "input_box"
  
  .gr_6
    .gr_12
      .mmodule
        %h2
          %span Biochemistry Assessment
        .mmodule-body
          = f.fields_for :biochemistry_assessment do |ba|
            .input
              .input_left
                %p
                  Serum Urea
                  = ba.text_field :serum_urea, :size => 6, :class => "input_box"
                %p
                  Serum Creatinine
                  = ba.text_field :serum_creatinine, :size => 6, :class => "input_box"
                %p
                  Triglycerides
                  = ba.text_field :triglycerides, :size => 6, :class => "input_box"
              .input_right
                %p
                  Urinary Urea
                  = ba.text_field :urine_area, :size => 6, :class => "input_box"
                %p
                  Bilirubin
                  = ba.text_field :bilirubin, :size => 6, :class => "input_box"
    .gr_12
      .mmodule
        %h2
          %span Electrolytes
        .mmodule-body
          = f.fields_for :electrolyte do |e|
            .input
              .input_left
                %p
                  Sodium
                  = e.text_field :sodium, :size => 8, :class => "input_box"
                %p
                  Potassium
                  = e.text_field :potassium, :size => 8, :class => "input_box"
              .input_right
                %p
                  Calcium
                  = e.text_field :calcium, :size => 8, :class => "input_box"
    .gr_12
      .mmodule
        %h2
          %span Blood Sugar Monitoring
        .mmodule-body
          = f.fields_for :blood_sugar_monitors do |bs|
            #monitors
              .input0
                .input4
                  Time
                  .datetimepicker.input-append
                    = bs.text_field :blood_sugar_monitored_on, "data-format" => "hh:mm:ss" , :size => 7
                    %span.add-on
                      %i{"date-time-icon" =>"icon-time", "date-date-icon" => "icon-calendar", :class => "icon-time"}
                .input5
                  = bs.text_field :details, :size => 7, :class => "input_box"
                  /= link_to_function "Add more", "", :class => "submit-green"
