#accordion
  %h4 
    -#  Investigation
    -#%span{:style => "float: right; width: auto; margin-right: 10px;", :id => "investigation"} Collapse 
  %div
    = render :partial => 'investigation', :locals => {:f => f}
  %h4 
    -#TPN additives
    -#%span{:style => "float: right; width: auto; margin-right: 10px;", :id => "additives"} Expand
  %div
    = render :partial => 'additives', :locals => {:f => f}
    
:javascript
  $(function() {
    $('.datetimepicker').datetimepicker({
          pickDate: false
              });
  });

  $(function() {
    $( "#accordion" ).accordion({
      collapsible: true,
      active: 0, 
      change: function(event, ui) {
      ui.newHeader.children().last().html("Collapse");
      ui.oldHeader.children().last().html("Expand");
      }
    }); 
   });
  
