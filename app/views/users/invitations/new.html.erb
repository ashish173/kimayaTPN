<div class="span10">
  <h2><%= t "devise.invitations.new.header" %></h2>

  <%= simple_form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => {:method => :post, class: 'form-horizontal well'} do |f| %>
    <%= f.input :name %>  
    <% resource.class.invite_key_fields.each do |field| -%>
      <%= f.input field %>    
    <% end -%>
    <%= f.input :role_id, collection: Role.all %>  
    <div class="form-actions">
      <%= f.submit t("devise.invitations.new.submit_button"), class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
