
= form_for(@patient) do |f|
  .div{:style => "width:50%;float:left;"}
    %p
      = f.label "registration_number *"
      = f.text_field :registration_number
    %p
      = f.label "name *"
      = f.text_field :name
    %p
      = f.label "gender_id *"
      = f.select :gender_id,  Gender.all.collect{|g| [g.name, g.id]}, {:include_blank => "--select--"}, :style => "width:300px;"
    %p
      = f.label "date_of_birth *"
      = f.text_field :date_of_birth,:value => @patient.try(:date_of_birth).try(:strftime,'%d-%m-%Y'), :class=> "datepicker"
    %p
      = f.label "birth_weight(kg) *"
      = f.text_field :birth_weight
    %p
      = f.label :additional_detail
      = f.text_area :additional_detail, :rows => 3, :cols => 39
  .div{:style => "width:50%;float:left;"}
    %p
      = f.label "address *"
      = f.text_field :address
    %p
      = f.label :city
      = f.text_field :city
    %p
      = f.label :state
      = f.text_field :state
    %p
      = f.label :pincode
      = f.text_field :pincode
    %p
      = f.label :residence_telephone
      = f.text_field :residence_telephone
    %p
      = f.label "emergency_telephone *"
      = f.text_field :emergency_telephone
    %p
      = f.label :mobile_number
      = f.text_field :mobile_number
  .buttons
    .grid_4
      = f.submit "Next", :class => "submit-green"
      = link_to "Cancel", patients_path, :class => "submit-gray"
